<!DOCTYPE html>
<html lang="en">
<head>
    <title>Title</title>
<style>
        #heading {
            background: black;
        }
    </style>
</head>
<body>
<h1 id="heading">Welcome !</h1>
    <p id="para">Have a good day :)</p>
    <script>
    function changeHeadingBg() {
        var change = confirm("Do you wish to change heading background color?");
        if(change) {
          document.getElementById("heading").style.backgroundColor = "red";
        }
    }
    function changeFontSize() {
        document.getElementById("para").style.fontSize = "30px";
    }
    changeHeadingBg();
    changeFontSize();
    </script>
  </body>
</head>
</html>
